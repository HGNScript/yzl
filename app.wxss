/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  /* padding: 200rpx 0; */
  box-sizing: border-box;
} 

/* hr间隔 */
.hr {
  width: 100%;
  height: 15rpx;
  background-color: #f8f8f8;
}
.hr2 {
  width: 100%;
  height: 30rpx;
  background-color: #f8f8f8;
}
.hr3 {
  height: 60rpx;
  width: 100%;
  background: #f8f8f8;
}
.hr4 {
  width: 100%;
  height: 18rpx;
  background-color: #f8f8f8;
}

/* 消除浮动 */
.remove {
  clear: both;
}

}

/* 内容 */

.box {
    border-bottom: 16rpx #f9f9f9 solid;
}

.box:last-child {
    border-bottom: none;
}

.block {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    padding: 20rpx;
}

.block_content {
    position: relative;

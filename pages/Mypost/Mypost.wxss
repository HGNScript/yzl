    margin-top: 0;
    border-radius: 0;
    margin: 5rpx 5rpx;
    float: left;
}

.price {
    padding-top: 10rpx;
    position: absolute;
    top: 0;
    right: 0;
}

.to_price {
    color: red;
    font-size: 30rpx;
}

.original_price {
    color: #666;
    font-size: 24rpx;

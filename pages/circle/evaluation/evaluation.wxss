/* pages/evaluation/evaluation.wxss */
.Block {
  padding: 40rpx; 
  box-sizing: border-box;
  margin-top: 10rpx;
  width: 100%;
}
textarea {
  width: 100%;
  border: 2rpx #ddd solid;
  border-radius: 12rpx;
  outline: none;
  box-sizing: border-box;
  padding: 20rpx;
  resize: none;
}

/* 按钮 */
.btn {
  position: fixed;
  background-color: #19b4ed;
  width: 100%;
  border-radius: 0;
  color: #fff;
  font-size: 40rpx;
  bottom: 0;
  left: 0;
}
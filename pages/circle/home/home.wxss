/* 导航 */

.navbar {
    width: 50%;
    font-size: 30rpx;
    flex: none;
    display: flex;
    color: rgb(99, 88, 88);
    background: #fff;
}

.navbar .item {
    position: relative;
    flex: auto;
    text-align: center;
    line-height: 100rpx;
}

.navbar .item.active {
    color: #000;
}

.navbar .item.active:after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 6rpx;
    width: 100%;
    margin: 0 auto;
    background: #19b4ed;
}

/* 内容 */

.content {
    padding-bottom: 60rpx;
}

.con {
    padding: 30rpx 0 0;
    border-bottom: 1px #f6f6f6 solid;
}

.con:last-child {
    border-bottom: none;
}

.con > .user {
    display: flex;
    position: relative;
    padding: 0 30rpx;
}

.con > .user > .topimg {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}

.con > .user > .name {
    display: flex;
    margin-left: 15rpx;
}

.con > .user > .name > .text {
    position: relative;
    color: #666;
    font-size: 32rpx;
    line-height: 100rpx;
    max-width: 250rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.con > .user > .name > image {
    width: 30rpx;
    height: 30rpx;
    padding: 0 10rpx;
    margin-top: 35rpx;
}

.con > .user > .face {
    width: 120rpx;
    height: 120rpx;
    position: absolute;
    right: 0;
    top: 0;
}

/* 内容 */

.con > .matter {
    margin: 30rpx 50rpx;
    padding:  0 30rpx;
}

.con > .matter > .text_box > .text {
    font-size: 30rpx;
    color: #444;
    letter-spacing: 3rpx;
    line-height: 1.7;
    word-wrap: break-word;
}

.checked_none {
    max-height: 100rpx;
    overflow: hidden;
}

.con > .matter > .matter_img {
    margin: 30rpx 0 0;
}

.matter_img1{
    width: 32%;
    height: 200rpx;
    padding: 0 3rpx 10rpx;
    float: left;
}



.con > .matter > .address {
    width: 100%;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    font-size: 26rpx;
    color: #666;
}

.con > .matter > .day {
    font-size: 26rpx;
    color: #666;
    line-height: 1.8;
}

/* 下拉收起 */

.con > .matter > .check {
    margin: 20rpx 0;
    width: 20%;
}

.con > .matter > .check > .text {
    color: #1c5c91;
    font-size: 30rpx;
}

/* 内容页脚 */

.con > .con_footer {
    position: relative;
    height: 40rpx;
    padding:  0 30rpx 30rpx;
}

.con > .con_footer > .browse {
    font-size: 26rpx;
    color: #666;
    line-height: 40rpx;
}

.con > .con_footer > .btn {
    position: absolute;
    right: 30rpx;
    top: 0;
    display: flex;
}

.con > .con_footer > .btn > text {
    line-height: 40rpx;
    margin-right: 10rpx;
    color: #666;
    font-size: 30rpx;
}

.con > .con_footer > .btn > image {
    width: 40rpx;
    height: 40rpx;
    margin: 0 20rpx;
}


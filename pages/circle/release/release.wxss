/* pages/release/release.wxss */
page {
  width: 100%;
  padding-bottom: 230rpx;
}
/* 表情 */
.face {
  padding: 0 30rpx 40rpx;
}
.face > .title > .title-img {
  width: 60rpx;
  height: 60rpx;
}
.face > .title {
  display: flex;
  margin: 20rpx 0 40rpx;
  color: #444;
  font-size: 40rpx;
}
swiper {
  height: 360rpx;
}
.face_img {
  width: 18.5%;
  border: 1.5px #fff solid;
  height: 140rpx;
  float: left;
}
.face_img:hover {
  border: 1.5px #19b4ed solid;
}

/* 内容 */
.Block {
  background: white;
  padding: 20rpx 40rpx; 
  box-sizing: border-box;
  margin-top: 10rpx;
  width: 100%;
}
textarea {
  width: 100%;
  border: 2rpx #ddd solid;
  border-radius: 12rpx;
  outline: none;
  box-sizing: border-box;
  padding: 20rpx;
  resize: none;
  height: 350rpx;
}

/* 上传 */
.pic {
  width: 100%;
  margin-top: 30rpx;
}
.pic > .upload > image {
  width: 23%;
  height: 160rpx;
  float: left;
  margin: 6rpx;
}
.pic > .pic_box > .image {
  width: 23%;
  height: 160rpx;
  position: relative;
  margin:6rpx;
  float: left;
}
.pic > .pic_box > .image > .imgurl {
  width: 100%;
  height: 160rpx;
}
.pic > .pic_box > .image > .del {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: -10rpx;
  right: -10rpx;
}


.checkbox_box {
  height: 100rpx;
  border-bottom: 1px solid #e5e5e5;
}
.checkbox_box > checkbox-group {
  display: flex;
}
.checkbox_box > checkbox-group > .checkbox{
  width: 30rpx;
  padding: 18rpx 30rpx;
  height: 30rpx;
}
.checkbox_box > checkbox-group > .text {
  font-size: 30rpx;
  line-height: 100rpx;
  color: #444;
}
/* 单选 */


.radio_box {
  height: 100rpx;
  display: flex;
  border-bottom: 1px solid #e5e5e5;
}
.radio_box > .radio {
  width: 30rpx;
  height: 30rpx;
  padding: 18rpx 30rpx;
}
.radio_box > .text {
  font-size: 30rpx;
  line-height: 100rpx;
  color: #444;
}

/* btn */
.btn {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  text-align: center;
  background-color: #19b4ed;
  color: #fff;
  font-size: 40rpx;
  border-radius: 0;
}

.choice {
    border: 1px solid #19b4ed;
}
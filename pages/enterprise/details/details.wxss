/* pages/enterprise/details/details.wxss */
/* 内容 */
.box:last-child{
  border-bottom: none;
}
.block {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 20rpx 40rpx;
}
.block_content {
  display: flex;
}
.block_content image {
  margin-top: 10rpx;
  width: 100rpx;
  height: 100rpx;
  flex: 0 0 auto;
  border-radius: 50%;
  margin-right: 20rpx;
}
.details  .details_things{
  color: #444;
  font-size: 40rpx;
  padding-top: 36rpx;
  letter-spacing:2rpx;
  line-height: 1;
  width: 400rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.details .details_name {
  font-size: 26rpx;
  letter-spacing:2rpx;
  color: #555;
  line-height: 2;
}
.details_name>.phone{
  letter-spacing:1rpx;
  color: #1c5c91;
}

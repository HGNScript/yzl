/* 功能 */

.details_like {
    padding-bottom: 20rpx;
    position: relative;
    display: flex;
    font-size: 13px;
    flex-direction: row;
}

.details_like>.asd {
    position: absolute;
    right: 20rpx;
    display: flex;
}

.details_like>.asd>image {
    height: 40rpx;
    width: 40rpx;
    padding: 0 15rpx;
}

.details_like>.asd>text {
    color: #666;
    font-size: 28rpx;
    line-height: 40rpx;
}

.details_like_text {
    vertical-align: middle;
    margin-right: 210px;
    padding-left: 50rpx;
    color: #555;
    font-size: 26rpx;
}

/* 收起 */

.checked_show {
    height: 120rpx;
    overflow: hidden;
}

/* 下拉收起 */

.check {
    margin: 20rpx 0;
    width: 20%;
}

.check > .text {
    color: #1c5c91;
    font-size: 30rpx;
}

/* 添加 */

.append > image {
    position: fixed;
    right: 20rpx;
    bottom: 50rpx;
    width: 100rpx;
    height: 100rpx;
}

/* 消除导航滚动条 */

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

/* 评论 */

.box > .comments {
    margin: 0rpx 50rpx 10rpx;
    padding: 20rpx;
    font-size: 30rpx;
    letter-spacing: 2rpx;
    line-height: 1.5;
}

.box > .comments > .btn {
    background: #f2f2f2;
    height: 60rpx;
    font-size: 30rpx;
    color: #2196f3;
    line-height: 60rpx;
    padding: 0 20rpx;
    border-radius: 5rpx;
}

.box > .comments > .block2 {
    background: #f2f2f2;
    margin-top: 10rpx;
    border-radius: 5rpx;
    padding: 10rpx 20rpx;
}

.box > .comments > .block2 > .comments_box {
    padding: 8rpx 0;
}

.box > .comments > .block2 > .comments_box > .name {
    color: #2196f3;
}

.box > .comments > .block2 > .comments_box > .text {
    color: #666;
}

.box > .comments > .block2 > .comments_box > .reply {
    color: #444;
    padding: 0 10rpx;
}

/* 评论输入框 */

.input_null {
    color: #c9c9c9;
}

.release {
    display: flex;
    align-items: flex-end; /*底部对齐*/
    justify-content: space-between; /*两端对齐*/
    box-sizing: border-box;
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    padding: 18rpx 0 18rpx 30rpx;
    background-color: #f7f8f7;
    font-size: 28rpx;
    z-index: 999;
}

.release .text {
    width: 504rpx;
    min-height: 34rpx;
    max-height: 102rpx; /*最多显示三行*/
    border-width: 15rpx 20rpx; /*使用padding与预期留白不一致，故使用border*/
    border-style: solid;
    border-color: #fff;
    line-height: 34rpx;
    font-size: 28rpx;
    background-color: #fff;
    border-radius: 4rpx;
}

.release .submit {
    width: 116rpx;
    height: 64rpx;
    line-height: 64rpx;
    text-align: center;
    color: #fff;
    font-size: 24rpx;
    background: #6c0;
}

.none {
    text-align: center;
}

.none image {
    margin: 0 auto;
    display: block;
    width: 52%;
}

.none text {
    color: darkgrey;
}

.bottom {
    text-align: center;
    margin: 20rpx;
    height: 100rpx;
}

.bottom>text {
    font-size: 22rpx;
    color: rgb(31, 28, 28);
}

/* pages/enterprise/home/home.wxss */

page {
    display: flex;
    flex-direction: column;
}

.navbar {
    height: 80rpx;
    position: relative;
    display: flex;
}

.nav {
    height: 100rpx;
    width: 85%;
    box-sizing: border-box;
    overflow: hidden;
    line-height: 100rpx;
    background: #f7f7f7;
    font-size: 26rpx;
    white-space: nowrap;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 99;
    color: #666;
}

.nav-item {
    position: relative;
    width: 23%;
    display: inline-block;
    text-align: center;
}

.nav-item.active {
    color: #222;
}

.nav-item.active:after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 5rpx;
    width: 100%;
    margin: 0 auto;
    background: #19b4ed;
}

.search_icon {
    z-index: 100;
    width: 15%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    background: #fff;
    position: fixed;
    top: 0;
    right: 0;
}

.search_icon>image {
    width: 40rpx;
    height: 40rpx;
    margin: 30rpx 0;
}

/* 内容 */

.box {
    border-bottom: 16rpx #f9f9f9 solid;
}

.box:last-child {
    border-bottom: none;
}

.block {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    padding: 20rpx 40rpx;
}

.block_content {
    display: flex;
}

.block_content image {
    margin-top: 10rpx;
    width: 100rpx;
    height: 100rpx;
    flex: 0 0 auto;
    border-radius: 50%;
    margin-right: 20rpx;
}

.details  .details_things {
    color: #444;
    font-size: 34rpx;
    padding-top: 20rpx;
    letter-spacing: 2rpx;
    line-height: 1;
    width: 400rpx;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}

.details .details_name {
    font-size: 26rpx;
    letter-spacing: 2rpx;
    color: #555;
    line-height: 2;
}

.details_name>.phone {
    letter-spacing: 1rpx;
    color: #1c5c91;
}

/* 内容 */

.box_con {
    color: #555;
    font-size: 28rpx;
    word-wrap: break-word;
    line-height: 1.6;
}

.box_con > .text {
    width: 100%;
    word-wrap: break-word;
}

.box_con > .list > .list_label {
    color: #1c5c91;
}

/* image */

.details_img {
    margin: 20rpx 0 10rpx;
}

.details_img .image {
    width: 31%;
    height: 170rpx;
    margin-top: 0;
    border-radius: 0;
    margin: 5rpx 5rpx;
    float: left;
}

.details_img .image2 {
    width: 65%;
    max-height: 400rpx;
    margin-top: 0;
    border-radius: 0;
    margin: 5rpx 5rpx;
    float: left;
}

/* 企业图标 */

.block .price {
    margin-top: 30rpx;
}

.block > .price > image {
    width: 50rpx;
    height: 50rpx;
}

/* 地址同行 */

.add_all {
    position: relative;
    display: flex;
    width: 100%;
}

.add_all .time {
    font-size: 24rpx;
    padding-top: 10rpx;
    color: #666;
}


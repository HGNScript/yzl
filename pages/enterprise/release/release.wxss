/* pages/enterprise/release/release.wxss */
/* 标题 */
.header {
  display: flex;
  padding: 10rpx;
  height: 100rpx;
  border-bottom: 1px #e5e5e5 solid;
}
.header > image {
  width: 60rpx;
  height: 60rpx;
  margin-top: 20rpx;
  margin-left: 33%;
  padding: 0 10rpx;
}
.header > text {
  font-size: 40rpx;
  color: #444;
  line-height: 100rpx;
  letter-spacing: 2rpx;
}

/* 内容 */
.content {
  height: 100rpx;
  padding: 0 20rpx;
  color: #666;
  display: flex;
  border-bottom: 1px #f6f6f6 solid;
}
.content > .con_title {
  line-height: 100rpx;
  font-size: 34rpx;
}
.content > .con_input1 {
  height: 80rpx;
  width: 500rpx;
  padding-left: 10rpx;
  font-size: 34rpx;
  color: #666;
  margin-top: 10rpx;
}
.content > .con_input2 {
  height: 80rpx;
  width: 260rpx;
  font-size: 34rpx;
  color: #666;
  text-align: center;
  border: 1px #f6f6f6 solid;
  margin: 8rpx 10rpx;
}
.placeholder {
  font-size: 30rpx;
  color: #666;
}

.content1 {
  padding: 0 20rpx;
  /* border-bottom: 1.5px #e5e5e5 solid; */
  color: #666;
}
.content1 > .con_title {
  line-height: 100rpx;
  font-size: 34rpx;
}
.content1 > textarea {
  border: 1px #f6f6f6 solid;
  border-radius: 10rpx;
  width: 96%;
  height: 200rpx;
  padding: 10rpx;
  display: block;
  margin:  0 auto;
}


/* 上传图片 */
.pic {
  width: 100%;
  margin-top: 30rpx;
  margin: 40rpx 30rpx;  
}
.pic > .upload > image {
  width: 21%;
  height: 160rpx;
  float: left;
  margin: 6rpx;
}
.pic > .pic_box > .image {
  width: 21.5%;
  height: 160rpx;
  position: relative;
  margin:6rpx;
  float: left;
}
.pic > .pic_box > .image > .imgurl {
  width: 100%;
  height: 160rpx;
}
.pic > .pic_box > .image > .del {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: -10rpx;
  right: -10rpx;
}


/* 按钮 */
.btn {
  background: #2196f3;
  color: #fff;
  border-radius: 0;
}

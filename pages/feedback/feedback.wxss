/* pages/feedback/feedback.wxss */
.title {
  font-size: 34rpx;
  color: #333;
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 20rpx;
  letter-spacing: 2rpx;
}
.textbox {
  background: #f9f9f9;
  padding: 20rpx 20rpx;
  margin-bottom: 10rpx;
}
.textbox > textarea {
  width: 100%;
  height: 250rpx;
  letter-spacing: 2rpx;
  font-size: 28rpx;
  color: #666;
}
.upload {
  display: flex;
  flex-wrap:wrap;
  padding: 0 20rpx;
}
.upbtn {
  width: 23%;
  height: 160rpx;
  margin: 20rpx 1%;
}
.upbtn > image {
  width: 100%;
  height: 100%;
} 
.upbtn > .text {
  text-align: center;
  font-size: 24rpx;
  color: #666;
  line-height: 1.3;
}
.upimg {
  position: relative;
  width: 23%;
  height: 160rpx;
  margin: 20rpx 1%;
}
.upimg > .image {
  width: 100%;
  height: 100%;
}
.upimg > .delimg {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: -10rpx;
  right: -10rpx;
}

/* btn */
.submit {
  width: 90%;
  margin-top: 100rpx;
  letter-spacing: 2rpx;
}
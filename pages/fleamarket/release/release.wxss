/* pages/fleamarket/release/release.wxss */
/* 标题 */
.header {
  display: flex;
  padding: 10rpx;
  height: 100rpx;
  border-bottom: 1.5px #e5e5e5 solid;
}
.header > image {
  width: 60rpx;
  height: 60rpx;
  margin-top: 20rpx;
  margin-left: 33%;
  padding: 0 10rpx;
}
.header > text {
  font-size: 40rpx;
  color: #444;
  line-height: 100rpx;
  letter-spacing: 2rpx;
}

/* 内容信息 */
.message_box {
  position: relative;
  height: 100rpx;
  border-bottom: 1.5px #e5e5e5 solid;
  display: flex;
}
.message_box2 {
  border-bottom: none;  
}
.message_box > .title {
  color: #666;
  margin-left: 30rpx;
  line-height: 100rpx;
  font-size: 34rpx;
}
.message_box > .input1 {
  height: 80rpx;
  width: 500rpx;
  padding-left: 10rpx;
  font-size: 34rpx;
  color: #666;
  margin-top: 10rpx;
}
.placeholder {
  font-size: 30rpx;
  color: #666;
}
.picker_box {
  width: 80%;
}
.picker {
  color: #666;
  font-size: 34rpx;
  line-height: 100rpx;
}
.right_img {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 30rpx;
  top: 25rpx;
}

.textarea > textarea {
  width: 90%;
  display: block;
  margin: 15rpx auto;
  padding: 10rpx;
  color: #666;
  font-size: 34rpx;
  height: 180rpx;
}

/* 上传图片 */

.pic {
  width: 100%;
  margin-top: 30rpx;
  margin: 40rpx 30rpx;  
}
.pic > .upload > image {
  width: 21%;
  height: 160rpx;
  float: left;
  margin: 6rpx;
}
.pic > .pic_box > .image {
  width: 21.5%;
  height: 160rpx;
  position: relative;
  margin:6rpx;
  float: left;
}
.pic > .pic_box > .image > .imgurl {
  width: 100%;
  height: 160rpx;
}
.pic > .pic_box > .image > .del {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: -10rpx;
  right: -10rpx;
}

/* 选项卡 */
.navbar{
  width: 100%;
  font-size: 30rpx;
  flex: none;
  display: flex;
  color: rgb(99, 88, 88);
  background: #fff;
  border-bottom: 1.5px #e5e5e5 solid;
  
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 100rpx;
  border-right: 1.5px #e5e5e5 solid;
}
.navbar .item.active{
  color:#3b8bca;
  font-weight: bold;
}

/* 发货方式 */
.way {  
  margin:  0 30rpx;
  margin-bottom: 50rpx;
}
.way > .title {
  color: #666;
  line-height: 100rpx;
  font-size: 34rpx;
}
.checkbox {
  display: flex;
  color: #666;
  font-size: 34rpx;
  margin: 10rpx 0;
}
.checkbox2 {
  display: flex;
}
.postage {
  display: flex;
  margin-left: 50rpx;
}
.postage > input {
  width: 50px;
  border-bottom: 1.5px #3b8bca solid;
  text-align: center;
  margin-right: 20rpx;
  margin-top: -5rpx;
  font-size: 34rpx;
}

/* 按钮 */
.btn {
  background: #2196f3;
  color: #fff;
  border-radius: 0;
}

/* 定位 */
.checkbox_box {
  height: 100rpx;
  border-bottom: 1px solid #e5e5e5;
}
.checkbox_box > checkbox-group {
  display: flex;
}
.checkbox_box > checkbox-group > .checkbox{
  width: 30rpx;
  height: 30rpx;
  display: block;
  margin-top: 25rpx;
  margin-left: 30rpx;
}
.checkbox_box > checkbox-group > .text {
  font-size: 30rpx;
  line-height: 100rpx;
  color: #444;
  margin-left: 30rpx;
}
/* pages/internship/practicenote/practicenote.wxss */
@import "../template/template.wxss";

/* 选项卡 */
.options {
  margin: 20rpx 40rpx;
  display: flex;
  color: #444;
  font-size: 34rpx;
}
.options > .home {
  width: 25%;
  line-height: 2.5;
  border-bottom: 1.5px #e5e5e5 solid;
  text-align: center;
}
.options > .task {
  width:25%;
  border:1.5px #e5e5e5 solid;
  border-bottom: 0px;
  border-radius: 8rpx 8rpx 0 0;
  line-height: 2.5;
  text-align: center;
  padding: 0 20rpx;
}
.options > .null {
  width: 50%;
  border-bottom: 1.5px #e5e5e5 solid;  
}

/* title */
.content {
  padding: 0 80rpx;
  margin-bottom: 100rpx;
}
.content > .title {
  font-size: 46rpx;
  color: #3b8bca;
  border-bottom: 2px #3b8bca solid;
  padding: 25rpx;
}
.content > .upload {
  border: 1.5px #e5e5e5 solid;
  border-radius: 10rpx;
  margin-top: 50rpx;
  padding: 30rpx 0;
}
.content > .upload > .no > image {
  width: 60rpx;
  height: 60rpx;
  display: block;
  margin: 0 auto;
  margin-top: 50rpx;
}
.content > .upload > .no > .text {
  text-align: center;
  color: #666;
  font-size: 32rpx;
  line-height: 2;
  margin-bottom: 50rpx;
}
.content > .upload > .yes {
  position: relative;
}
.content > .upload > .yes > .image {
  width: 80%;
  height: 350rpx;
  display: block;
  margin: 0 auto;
}
.content > .upload > .yes > .delete {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 40rpx;
  top: -10rpx;
}
.content > .btn {
  background: #367cb7;
  color: #fff;
  font-size: 30rpx;
  margin: 40rpx 0 60rpx;
}

/* 上传 */
.pic {
  width: 100%;
  margin-top: 30rpx;
}
.pic > .upload > image {
  width: 23%;
  height: 160rpx;
  float: left;
  margin: 6rpx;
}
.pic > .pic_box > .image {
  width: 23%;
  height: 160rpx;
  position: relative;
  margin:6rpx;
  float: left;
}
.pic > .pic_box > .image > .imgurl {
  width: 100%;
  height: 160rpx;
}
.pic > .pic_box > .image > .del {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: -10rpx;
  right: -10rpx;
}
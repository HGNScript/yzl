/* pages/secret/details/details.wxss */

page {
    background: #f8f8f8;
}

/* 顶部 */

.header {
    background-color: #19b4ed;
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
}

.header > view {
    display: inline-block;
}

.header-date {
    margin-left: 520rpx;
    background-color: #fff;
    border-radius: 4px;
    font-size: 28rpx;
    color: #b02923;
    height: 58rpx;
    width: 210rpx;
    line-height: 58rpx;
    text-align: center;
}

.picker {
    font-size: 30rpx;
}

/* 语音 */

.content {
    margin-top: 28rpx;
}

.content > .title {
    font-size: 32rpx;
    line-height: 3;
    padding: 0 20rpx;
    letter-spacing: 2rpx;
    color: #333;
}

.test {
    margin: 0.8%;
    display: inline-block;
    width: 31%;
    height: 200rpx;
    background: #fff;
    border: 0.5px #ccc solid;
    border-radius: 5rpx;
    box-shadow: 3rpx 3rpx 10rpx rgba(0, 0, 0, .1);
}

.test image {
    width: 60rpx;
    height: 60rpx;
    display: block;
    margin: 0 auto;
    padding-top: 50rpx;
}

.test .miao {
    text-align: center;
    font-size: 28rpx;
    color: #333;
    line-height: 2;
}

.audioFlag {
    position:fixed;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    z-index: 9999;
}

.audioFlag image {
    width: 200rpx;
    height: 200rpx;
    z-index: 9999;
}

.audioFlag text {
    display: block;
    text-align: center;
    z-index: 9999;
    color: #7a7f81
}

.mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    z-index: 1000;
    opacity: 0.7;
}


.none {
  text-align: center;
  font-size: 30rpx;
  color: #999;
}
.none > image {
  display: block;
  margin: 0 auto;
  width: 50%;
  
}
